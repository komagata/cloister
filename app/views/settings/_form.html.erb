    <div class="setting">
      <h2>Editing setting</h2>
      <% form_for @setting, :url => setting_path, :method => 'put' do |f| %>
        <%= f.error_messages %>
        <p>
          <%= f.label :title, '', :class => 'label' %><br />
          <%= f.text_field :title, :class => 'text_field' %>
        </p>
        <p>
          <%= f.label :description, '', :class => 'label' %><br />
          <%= f.text_area :description, :class => 'text_area_mini' %>
        </p>
        <p>
          <%= f.submit submit_label %>
        </p>
      <% end %>
    </div>
