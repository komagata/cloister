    <div class="doc">
<%- unless doc.title.blank? -%>
      <h2 class="title"><%= link_to doc.title, doc %></h2>
<%- end -%>
      <div class="body"><%= textilize doc.body  %></div>
      <div class="time created_at">Created at <%= link_to doc.created_at.to_s(:long_jp), doc %></div>
      <div class="time updated_at">Updated at <%= link_to doc.updated_at.to_s(:long_jp), doc %></div>
      <div class="edit"><%= link_to 'Edit', edit_doc_path(doc) %></div>
      <div class="delete"><%= link_to 'Delete', doc, :confirm => 'Are you sure?', :method => :delete %></div>
    </div>
