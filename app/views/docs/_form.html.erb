      <% form_for @doc do |f| %>
        <%= f.error_messages %>
        <p>
          <%= f.label :title, '' %><br />
          <%= f.text_field :title, :class => 'text_field' %>
        </p>
        <p>
          <%= f.label :body, '' %><br />
          <%= f.text_area :body, :class => 'text_area' %>
        </p>
        <p>
          <%= f.submit submit_label %>
        </p>
      <% end %>
